	<!--oracle-->
	<select id="queryList" resultType="map">
		select * from(select * from(select t.*,rownum rn from(select a.table_name tableName,a.last_analyzed lastAnalyzed,b.comments
		tableComment
		from user_tables a left join user_tab_comments b
		on a.table_name=b.table_name where 1=1
		<if test="tableName !=null and tableName.trim()!=''">
			and table_name like '%'||#{tableName}||'%'
		</if>
		)t) where rn $gt;0)tt where tt.rn $lt;=10
	</select>

